<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <link rel="stylesheet" href="../stylesheets/navStyle.css">
  <link rel="stylesheet" href="../stylesheets/profileStyle.css">
</head>

<body>
  <% include ./nav.ejs %>
  <div class="container">
    <% include ./userDets.ejs %>
      <div class="container">
        <div class="d-flex justify-content-evenly">
          <a href="/profile" class="text-white  text-decoration-none mb-4 fw-bold">Posts</a>
          <a href="/savePins" class="text-white  text-decoration-none mb-4">Saved Pins</a>
        </div>
        <% if(userDets.pins.length > 0) { %>
          <div class="cards d-flex flex-wrap gap-2">
            <% userDets.pins.forEach(pin=>{ %>
              <div class="card" style="width: 16.6rem;">
                <a href="/show/pin/<%= pin._id %>">
                <img src="/images/uploads/<%= pin.pinCover %>" class="card-img-top object-fit-cover " style="height: 150px;" alt="...">
              </a>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= pin.userPinTitle %>
                  </h5>
                  <p class="opacity-75 mb-0"><%= pin.userPostPin.length %></p>
                </div>
              </div>
              <% }) %>
          </div>
        <% } else { %>
          <h1 class="text-center " style="color: white;">No post upload yet</h1>
        <% } %>
        
      </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script>
      document.querySelector("#uploadIcon").addEventListener("click", ()=>{
        document.querySelector("#uploadForm input").click();
      });
      document.querySelector("#uploadForm input").addEventListener("change", ()=>{
        document.querySelector("#uploadForm").submit();
      });
    </script>
</body>

</html>