<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="../stylesheets/profileStyle.css">
</head>

<body>
    <div class="container">
        <% include ./userDets.ejs %>
            <div class="container">
                <div class="d-flex justify-content-evenly">
                    <a href="/profile" class="text-black text-decoration-none mb-2">Posts</a>
                    <a href="/savePins" class="text-black text-decoration-none mb-2 fw-bold">Pins Saves</a>
                </div>
                <div class="cards d-flex flex-wrap align-items-start gap-2">
                    <% userDets.posts.forEach(post=>{ %>
                        <div class="card" style="width: 16.6rem;">
                            <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.postText %>
                                </h5>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        document.querySelector("#uploadIcon").addEventListener("click", () => {
            document.querySelector("#uploadForm input").click();
        });
        document.querySelector("#uploadForm input").addEventListener("change", () => {
            document.querySelector("#uploadForm").submit();
        });
    </script>
</body>

</html>